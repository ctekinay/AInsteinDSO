# Alliander EA Assistant Environment Configuration
# Copy this file to .env and add your actual API keys

# Primary LLM provider (groq, openai, ollama)
LLM_PROVIDER=groq

# Groq Configuration (Free tier available)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768
GROQ_MAX_TOKENS=1024
GROQ_TEMPERATURE=0.3
GROQ_TIMEOUT=30

# OpenAI Configuration (if using as primary or fallback)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4-turbo-preview
# OPENAI_MAX_TOKENS=1024
# OPENAI_TEMPERATURE=0.3
# OPENAI_TIMEOUT=30

# Ollama Configuration (local deployment)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2:latest
# OLLAMA_MAX_TOKENS=1024
# OLLAMA_TEMPERATURE=0.3
# OLLAMA_TIMEOUT=60

# Fallback Provider (optional - will be used if primary fails)
# FALLBACK_PROVIDER=openai

# Embedding Configuration
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=nomic-embed-text

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000

# Logging
LOG_LEVEL=INFO